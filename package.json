{
	"name": "arcusmm",
	"version": "0.0.1",
	"description": "Native Mod Manager for Linux",
	"main": "main.js",
	"scripts": {
		"start": "electron --disable-gpu .",
		"devStart": "rm -rf ~/.local/share/arcus && electron --disable-gpu .",
		"dist": "electron-builder",
		"buildArch": "npm run genLicenseFile && rm -rf dist/*.pacman && npx electron-builder --linux pacman&& pacman -U dist/arcus-*.pacman --noconfirm",
		"genLicenseFile": "npx nlf > license.txt",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"repository": "https://github.com/Ashnwor/arcus",
	"keywords": [
		"native",
		"linux",
		"mod",
		"manager",
		"arcus"
	],
	"author": {
		"name": "İlyas Akın",
		"email": "ashnwor@gmail.com"
	},
	"license": "GPL-3.0",
	"build": {
		"appId": "com.ash.arcusmm",
		"linux": {
			"target": [
				"pacman",
				"appImage",
				"tar.xz"
			]
		},
		"protocols": [
			{
				"name": "arcusmm",
				"schemes": [
					"nxm"
				]
			}
		]
	},
	"devDependencies": {
		"babel-eslint": "^9.0.0",
		"electron": "^7.2.4",
		"electron-builder": "^22.6.0",
		"eslint": "^5.16.0",
		"eslint-config-airbnb": "^17.1.1",
		"eslint-config-prettier": "^4.3.0",
		"eslint-config-wesbos": "0.0.19",
		"eslint-plugin-html": "^5.0.5",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^1.7.0",
		"nlf": "^2.1.1",
		"prettier": "^1.19.1"
	},
	"dependencies": {
		"bootstrap": "^4.4.1",
		"custom-electron-titlebar": "^3.2.2",
		"jquery": "^3.5.0",
		"node-7z": "^2.1.1",
		"popper.js": "^1.16.1",
		"then-request": "^6.0.2",
		"wget-improved": "^3.2.0"
	}
}
